//sliding window technique
// time: O(2K)
//space: O(1)
class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) {
        int n = cardPoints.size();

        // Step 1: Take first k cards from the left
        int total = 0;
        for (int i = 0; i < k; i++) {
            total += cardPoints[i];
        }

        int ans = total;

        // Step 2: Gradually replace from left with right
        for (int i = 1; i <= k; i++) {
            total = total - cardPoints[k - i] + cardPoints[n - i];
            ans = max(ans, total);
        }

        return ans;
    }
};
